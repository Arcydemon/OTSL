	<globalevent name="record" type="record" event="script" value="record.lua"/> <!-- Skrypt powiadamiający o nowym rekordzie graczy online -->
	<globalevent name="raids" interval="15000" event="script" value="raid.lua"/> <!-- Losowy raid o ustalonej godzinie i dniu -->
